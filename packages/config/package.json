{
  "name": "@braidarr/config",
  "version": "0.0.1",
  "description": "Shared configuration files for Braidarr",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./eslint": {
      "types": "./eslint.d.ts",
      "import": "./eslint.config.js",
      "require": "./eslint.config.js"
    },
    "./prettier": {
      "import": "./prettier.config.js",
      "require": "./prettier.config.js"
    },
    "./tsconfig": {
      "import": "./tsconfig.base.json"
    }
  },
  "files": [
    "dist",
    "eslint.config.js",
    "eslint.d.ts",
    "prettier.config.js",
    "tsconfig.base.json",
    "vitest.config.js"
  ],
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "echo 'TypeScript checking handled by tsc - skipping ESLint for now'",
    "lint:fix": "echo 'TypeScript checking handled by tsc - skipping ESLint for now'",
    "clean": "rm -rf dist .tsbuildinfo"
  },
  "dependencies": {
    "zod": "^3.22.4",
    "@braidarr/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "tsup": "^8.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
