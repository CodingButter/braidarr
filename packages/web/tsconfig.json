{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@braidarr/shared": ["../shared/src"],
      "@braidarr/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "vite.config.ts"],
  "exclude": ["dist", "node_modules"],
  "references": [{ "path": "../shared" }]
}
